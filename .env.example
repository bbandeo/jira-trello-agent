# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/jira-trello-agent

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Default Settings
DEFAULT_SYNC_FREQUENCY=daily
DEFAULT_SYNC_DIRECTION=jira_to_trello

# JWT (optional, for user authentication)
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# External Service URLs (optional)
# JIRA_BASE_URL=https://your-domain.atlassian.net
# TRELLO_BASE_URL=https://api.trello.com/1